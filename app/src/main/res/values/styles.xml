<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryDarkColor</item>
    </style>

    <style name="font">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="info_text" parent="font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="icon_text" parent="font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
